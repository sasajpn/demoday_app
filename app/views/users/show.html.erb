<div class="page-wrapper">
	<div class="vertical">
		<ul class="mypage-nav nav nav-tabs" role="tablist">
			<li class="active"><a href="#vtab1" role="tab" data-toggle="tab" aria-expanded="true"><i class="fa fa-book pr-10"></i> 登録した本</a></li>
			<li class=""><a href="#vtab2" role="tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-lightbulb-o pr-10"></i> 開始した取引</a></li>
			<li class=""><a href="#vtab3" role="tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-check pr-10"></i> ほしいね！をした取引</a></li>
			<li class=""><a href="#vtab4" role="tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-trophy pr-10"></i> 成立した取引</a></li>
			<li class=""><a href="#vtab5" role="tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-handshake-o pr-10"></i> 取引実績</a></li>
			<li class=""><a href="#vtab6" role="tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-cog pr-10"></i> 設定</a></li>
		</ul>
		<div class="mypage-tab tab-content">
			<div class="tab-pane fade active in" id="vtab1">
				<%= link_to new_user_book_path(current_user), class: "btn btn-default" do %>新しく本を登録する<% end %>
				<%= render 'books/index', books: current_user.books.not_parent.not_child %>
			</div>
			<div class="tab-pane fade" id="vtab2">
				<%= render 'books/part', objects: current_user.parents, num: 1 %>
			</div>
			<div class="tab-pane fade" id="vtab3">
				<%= render 'books/part', objects: current_user.children , num: 2 %>
			</div>
			<div class="tab-pane fade" id="vtab4">
				<%= render 'books/part', objects: current_user.parents.agree + current_user.children.agree , num: 3 %>
			</div>
			<div class="tab-pane fade" id="vtab5">
				<%= render 'books/part', objects: current_user.performances %>
			</div>
			<div class="tab-pane fade" id="vtab6">
				<h3 class="title">設定</h3>
					<%= render partial: 'edit' %>
					<div class="separator-2"></div>
					<% if current_user.addresses.any? %>
						<%= render partial: 'addresses/index' %>
					<% end %>
			</div>
		</div>
	</div>
</div>
