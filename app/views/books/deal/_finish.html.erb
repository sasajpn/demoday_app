<div class="tab-pane" id="pill-4">
  <div class="row grid-space-10">
    <% current_user.books.each do |book| %>
      <% if book.exchange == true %>
          <div class="col-sm-6 col-md-3">
            <div class="image-box team-member style-2 shadow bordered mb-20 text-center">
              <div class="overlay-container overlay-visible">
                <%= image_tag(book.image, style: "width: 250px; height: 350px;") unless book.image? %>
                <%= image_tag('no-image.png', style: "width: 250px; height: 350px;") if book.image? %>
              </div>
              <div class="overlay-bottom">
                <p class="lead margin-clear"><%= book.title %></p>
                <small><%= book.author %></small>
              </div>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
