<div class="tab-pane" id="pill-2">
  <div class="row grid-space-10">
    <% current_user.children.each do |child| %>
      <% if child.parent_child.blank? %>
        <div class="col-sm-6 col-md-3">
          <div class="image-box team-member style-2 shadow bordered mb-20 text-center">
            <div class="overlay-container overlay-visible">
              <%= image_tag(child.image, style: "width: 250px; height: 350px;") unless child.image.blank? %>
              <%= image_tag('no-image.png', style: "width: 250px; height: 350px;") if child.image.blank? %>
            </div>
            <div class="overlay-bottom">
              <p class="lead margin-clear"><%= child.title %></p>
              <small><%= child.author %></small>
              <hr />
              <span class="label label-default"><%= child.partner.username %>さんの<%= child.parent_book.title %>と交渉中です</span>
              <br />
              <%= link_to "ほしいね！を取り消す", child_path(child), class: "btn btn-danger btn-sm",
                 method: :delete, data: { confirm: 'ほしいね！を取り消してもよろしいですか？' } %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
