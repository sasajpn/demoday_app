<div class="tab-pane" id="pill-2">
  <div class="row grid-space-10">
    <% current_user.children.each do |child| %>
      <% if child.book.exchange == false %>
        <div class="col-sm-6 col-md-3">
          <div class="image-box team-member style-2 shadow bordered mb-20 text-center">
            <div class="overlay-container overlay-visible">
            <%= image_tag('blog-1.jpg') %>
            </div>
            <div class="body">
              <h3 class="margin-clear"><%= child.book.title %></h3>
              <small><%= child.book.author %></small>
              <div class="separator mt-10"></div>
              <span class="label label-default"><%= child.parent.book.user.username %>さんの<%= child.parent.book.title %>と交渉中です</span>
              <br />
              <%= link_to "ほしいね！を取り消す", child_path(child), class: "btn btn-danger btn-sm",
                 method: :delete, data: { confirm: 'ほしいね！を取り消してもよろしいですか？' } %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
